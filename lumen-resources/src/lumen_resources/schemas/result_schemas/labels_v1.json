{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Labels Response v1",
  "description": "Classification response schema for Lumen services. Returns ranked labels with confidence scores.",
  "type": "object",
  "properties": {
    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "The classification label or class name"
          },
          "score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence score for this label (0.0 to 1.0)"
          }
        },
        "required": ["label", "score"],
        "additionalProperties": false
      },
      "description": "Array of classification results sorted by confidence score (highest first)",
      "minItems": 0
    },
    "model_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Identifier of the model that generated the classification"
    }
  },
  "required": ["labels", "model_id"],
  "additionalProperties": true,
  "examples": [
    {
      "labels": [
        {
          "label": "cat",
          "score": 0.9
        },
        {
          "label": "dog",
          "score": 0.1
        }
      ],
      "model_id": "clip_model_v1"
    },
    {
      "labels": [
        {
          "label": "golden_retriever",
          "score": 0.85
        },
        {
          "label": "labrador_retriever",
          "score": 0.12
        },
        {
          "label": "dog",
          "score": 0.03
        }
      ],
      "model_id": "bioclip_model_v2"
    }
  ]
}